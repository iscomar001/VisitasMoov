<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="visitas.solutions.moov.com.visitasmoov.PrincipalActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/fullscreen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:textColor="#33b5e5"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"
            android:text="@string/principal_welcome" />

        <ImageView
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.37" />


        <TextView
            android:id="@+id/principal_user_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:textColor="#33b555"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/principal_usuario"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.37"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:text="@string/principal_buton_cambio"
                android:onClick="btnCambioOnClick"
                android:id="@+id/principal_btn_cambio"
            />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:visibility="invisible"
                android:onClick="btnLoginOnClick"
                android:text="@string/principal_buton_Inicio"
                android:id="@+id/principal_btn_login"
            />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
